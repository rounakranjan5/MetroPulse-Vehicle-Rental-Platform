<section class="py-5 bg-light">
  <div class="container">
    <div class="text-center mb-5" data-aos="fade-up" data-aos-duration="500">
      <h2 class="display-5 fw-bold"><%= t('home.Popular_Vehicles') %></h2>
      <p class="lead text-muted"><%= t('home.popular_vehicles_desc') %></p>
    </div>
    
    <div class="row g-4">
      <% Vehicle.where(available: true).order(created_at: :asc).limit(3).each_with_index do |vehicle, index| %>
        <div class="col-lg-4 col-md-6" data-aos="flip-up" data-aos-duration="400" data-aos-delay="<%= index * 50 %>">
          <div class="card h-100 border-0 shadow-sm">
            <% if vehicle.image_url.present? %>
              <img src="<%= vehicle.image_url %>" class="card-img-top" alt="<%= vehicle.name %>" style="height: 200px; object-fit: cover;">
            <% else %>
              <img src="https://via.placeholder.com/400x200?text=No+Image" class="card-img-top" alt="No image">
            <% end %>
            <div class="card-body">
              <div class="d-flex justify-content-between align-items-center mb-2">
                <h5 class="card-title fw-bold mb-0"><%= vehicle.name %></h5>
                <span class="badge bg-success">â‚¹<%= vehicle.price_per_hour %>/hour</span>
              </div>
              <p class="card-text text-muted small"><%= vehicle.condition %></p>
              <div class="d-grid">
                <%= link_to t('home.view_details'), rental_station_vehicles_path(vehicle.rental_station), class: "btn btn-outline-primary" %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
    
    <div class="text-center mt-4" data-aos="zoom-in" data-aos-duration="300">
      <%= link_to t('home.Browse_All_Vehicles'), rental_stations_path, class: "btn btn-primary btn-lg" %>
    </div>
  </div>
</section>

