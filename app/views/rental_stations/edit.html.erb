<div class="container my-5">
  <h1 class="mb-4">Edit Rental Station</h1>
  
  <% if @rental_station.errors.any? %>
    <div class="alert alert-danger">
      <% @rental_station.errors.full_messages.each do |message| %>
        <div><%= message %></div>
      <% end %>
    </div>
  <% end %>
  
  <%= form_with model: @rental_station, url: rental_station_path(@rental_station), method: :patch do |f| %>
    <div class="mb-3">
      <%= f.label :name, class: "form-label" %>
      <%= f.text_field :name, class: "form-control" %>
    </div>
    
    <div class="mb-3">
  <%= f.label :city, class: "form-label" %>
  <%= f.select :city, [
    'Delhi NCR', 'Bangalore', 'Pune', 'Hyderabad', 'Dehradun', 
    'Kolkata', 'Chennai', 'Mumbai', 'Lucknow', 'Jaipur', 
    'Ahmedabad', 'Indore', 'Goa'
  ], {}, { class: "form-select" } %>
</div>

    <div class="mb-3">
      <%= f.label :station_type, class: "form-label" %>
      <%= f.select :station_type, ["E-Scooter", "E-Bike", "Bike", "Car-Petrol", "Car-Diesel", "Car-Electric", "Scooter", "Bus"], {}, { class: "form-select" } %>
    </div>
    
    <div class="mb-3">
      <%= f.label :status, class: "form-label" %>
      <%= f.select :status, ['Active', 'Inactive'], {}, { class: "form-select" } %>
    </div>
    
    <div class="mb-3">
      <%= f.label :image_url, class: "form-label" %>
      <%= f.text_field :image_url, class: "form-control" %>
    </div>
    
    <%= f.submit "Update Rental Station", class: "btn btn-primary" %>
    <%= link_to "Cancel", dashboard_rental_stations_path, class: "btn btn-secondary ms-2" %>
  <% end %>
</div>
